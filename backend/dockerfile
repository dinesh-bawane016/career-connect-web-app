# Stage 1: install deps
FROM node:20-alpine AS deps
WORKDIR /app
COPY package*.json ./
RUN ping -c 4 8.8.8.8 || echo "Ping 8.8.8.8 failed"
RUN ping -c 4 registry.npmjs.org || echo "Ping registry.npmjs.org failed"
RUN npm config set fetch-retry-maxtimeout 600000 \
    && npm config set fetch-retry-mintimeout 10000 \
    && npm config set fetch-retries 5 \
    && npm ci --production --verbose

# Stage 2: build (if you have build step â€” optional)
FROM node:20-alpine AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .
# If you have TypeScript or build steps uncomment:
# RUN npm run build

# Stage 3: runtime
FROM node:20-alpine AS runner
WORKDIR /app
ENV NODE_ENV=production
# Create a non-root user (security)
RUN addgroup -S appgroup && adduser -S appuser -G appgroup
COPY --from=deps /app/node_modules ./node_modules
COPY --from=builder /app ./
USER appuser
EXPOSE 5000
CMD ["node", "server.js"]
